@model IEnumerable<Soti.Models.AuthorPlay>

@{
    ViewData["Title"] = "Plays";
}

<h1>Plays</h1>

<form asp-controller="Plays" asp-action="Index">
    <p>
        Author: <input type="text" name="AuthorString">
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Play.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Play.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Play.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Play.Notes)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PlayId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PlayId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PlayId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
